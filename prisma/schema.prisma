generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jobs {
  id               String    @id @default(cuid())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  title            String
  location         String
  type             JobType   @default(FULL_TIME)
  minSalary        Int
  maxSalary        Int
  description      String
  requirements     String
  responsibilities String
  deadline         DateTime
  companyId        String
  company          Companies @relation(fields: [companyId], references: [id])
}

model Companies {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  logo      String?
  jobs      Jobs[]
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}
